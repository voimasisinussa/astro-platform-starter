    align-items: center;
  }

  .btn {
    width: 100%;
    max-width: 420px;
    padding: 0.95rem 1.1rem;
  }

  .course-steps li {
    font-size: 1.05rem;
    line-height: 1.55;
  }

  .contact-section p {
    font-size: 1.05rem;
    line-height: 1.6;
  }
}
@media (min-width: 1024px) {
  .contact-section {
    padding: 5rem 2rem;
    margin-top: 2rem; 
  }
}

</style>
