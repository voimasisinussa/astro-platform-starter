    align-items: center;
    text-align: center;
    padding: 4rem 2rem;
    position: relative;
  }

  .overlay {
    background-image: url('/crown.png');
    background-repeat: no-repeat;
    background-position: center;
    background-size: 65%;
    opacity: 0.25;
    position: absolute;
    left: 0; right: 0; top: 0; bottom: 0;
    z-index: 1;
  }
/* CONTACT / #yhteys */
.contact-section {
  width: 100%;
  padding: 4rem 2rem;
  background: #000;
  position: relative;
}

