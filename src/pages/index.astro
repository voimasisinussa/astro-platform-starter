  }

  .hero-text {
    font-size: 1rem;
    line-height: 1.6;
    max-width: 42ch;
  }

  .overlay {
    background-size: 80%;
    opacity: 0.22;
  }

  .hero-cta,
  .course-cta,
  .contact-cta {
    display: flex;
